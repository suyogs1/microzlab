{
  "name": "microz-lab",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "MicroZ Lab - Educational assembly language learning platform with comprehensive debugger",
  "scripts": {
    "dev": "vite",
    "dev:debugger": "vite --open /debugger",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:debugger": "vitest run -t debugger",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "smoke:debugger": "node scripts/smoke-debugger.mjs",
    "test:showcase": "node scripts/test-debugger-showcase.mjs"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fontsource/jetbrains-mono": "^5.2.6",
    "@headlessui/react": "^2.2.7",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.5",
    "react-router-dom": "^6.30.1",
    "source-map": "^0.7.6",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.0",
    "monaco-editor": "^0.45.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/index-*.js",
      "maxSize": "250kb",
      "compression": "gzip"
    }
  ]
}
